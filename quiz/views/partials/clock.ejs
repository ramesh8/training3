<div class="progress">
  <div
    class="progress-bar progress-bar-striped progress-bar-animated"
    role="progressbar"
    aria-label="progress bar"
    aria-valuemin="0"
    aria-valuemax="100"
    id="pbar"
    style="width: 100%"
  >
    <span class="time fw-bold"></span>
  </div>
</div>
<script>
  var totalTime = 10 * 60; //in seconds
  var tick = 1;

  const timer = setInterval(() => {
    var remainingTime = totalTime - tick;
    var scaledTime = Math.round((remainingTime / totalTime) * 100);
    const pbar = document.querySelector("#pbar");
    const timex = document.querySelector(".time");
    pbar.setAttribute("aria-valuenow", scaledTime);

    pbar.style.width = scaledTime + "%";
    timex.innerHTML =
      Math.floor(remainingTime / 60) + "m " + (remainingTime % 60) + "s";
    tick++;
  }, 1000);

  setTimeout(() => {
    clearInterval(timer);
    const pbar = document.querySelector("#pbar");
    pbar.remove();
  }, totalTime * 1000);
</script>
